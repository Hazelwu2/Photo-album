<% if @photo.errors.present? %>
  <ul>
    <% @photo.errors.each do |error| %>
    <li>
      <%= "#{error.capitalize}，不能為空白" %>
    </li>
    <% end %>
  </ul>
<% end %>

<div class="form container">

  <%= form_for @photo do |f| %>
  <div class="form-group">
    <%= f.label :title, "標題：" %>
    <%= f.text_field :title, class: "form-control", require: true %>
  </div>

  <div class="form-group">
    <%= f.label :date, "日期：" %>
    <%= f.date_select :date, class: "form-control", require: true  %>
  </div>
  <div class="form-group">
    <%= f.label :description, "描述：" %>
    <%= f.text_field :description, class: "form-control", require: true  %>
  </div>
  <div class="form-group">
    <%= f.label :file_location, "上傳圖片：" %>
    <%= f.file_field :file_location, class: "form-control", require: true  %>
  </div>
    <%= f.submit %>
  <% end %>

</div>
