<div class="container">
  <table class="table table-striped table-condensed">
   <% @photos.each do |photo| %>
    <tr>
      <td><%= photo.title %></td>
      <td><%= link_to 'Show', photo_path(photo) %></td>
      <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
      <td><%= link_to 'Destroy', photo_path(photo), method: :delete, data:{ confirm: "你確定要刪除嗎?" } %></td>
    </tr>
    <% end %>
  </table>

  <%= link_to '新增相片', new_photo_path, class: 'btn btn-primary' %>


</div>
